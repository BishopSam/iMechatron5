<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    >


    <ImageView
        android:contentDescription="launchicon"
        android:id="@+id/imechatronsplash"
        android:layout_marginTop="150dp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:src="@drawable/imechatron"
        android:adjustViewBounds="true"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/imechatronsplash"
        android:layout_marginTop="150dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="mechatrons!, assemble.."
        android:textStyle="bold"
        android:textColor="@color/colorNames"
        android:textSize="18sp"
        android:fontFamily="serif-monospace"/>

</RelativeLayout>