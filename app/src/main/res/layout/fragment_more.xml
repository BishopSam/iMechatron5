<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@android:color/white">

    <ImageView
        android:layout_marginTop="15dp"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:src="@drawable/imechatron"
        android:adjustViewBounds="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/iv_more"
        android:layout_marginBottom="30dp"
        />
    <Button
        android:id="@+id/bt_more"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/viewstyle3"
        android:layout_below="@+id/iv_more"
        android:layout_margin="10dp"
        android:text="Sign Out"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        android:drawableEnd="@drawable/ic_arrow_forward_black_24dp"
        android:textAllCaps="false"
        android:textAlignment="textStart"
        android:paddingStart="15dp"
        />
    <Button
        android:id="@+id/bt1_more"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/viewstyle3"
        android:layout_below="@+id/bt_more"
        android:layout_margin="10dp"
        android:text="Calculate My GP"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        android:drawableEnd="@drawable/ic_arrow_forward_black_24dp"
        android:textAllCaps="false"
        android:textAlignment="textStart"
        android:paddingStart="15dp"
        />

    <Button
        android:id="@+id/bt2_more"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/viewstyle3"
        android:layout_below="@+id/bt1_more"
        android:layout_margin="10dp"
        android:text="About NAMES"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textAlignment="textStart"
        android:paddingStart="15dp"
        android:drawableEnd="@drawable/ic_arrow_forward_black_24dp"
        />

    <Button
        android:id="@+id/bt3_more"
        android:textColor="@android:color/white"
        android:text="Department Staff"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:textAlignment="textStart"
        android:paddingStart="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/viewstyle3"
        android:drawableEnd="@drawable/ic_arrow_forward_black_24dp"
        android:layout_below="@+id/bt2_more"
        android:layout_margin="10dp"
        />

    <Button
        android:text="Student Executives"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textAlignment="textStart"
        android:paddingStart="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableEnd="@drawable/ic_arrow_forward_black_24dp"
        android:background="@drawable/viewstyle3"
        android:layout_below="@+id/bt3_more"
        android:layout_margin="10dp"
        android:id="@+id/bt4_more"/>

</RelativeLayout>